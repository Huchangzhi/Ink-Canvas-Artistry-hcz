<Window x:Class="LotteryDrawing.NamesInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LotteryDrawing"
        Title="名单导入 - 抽奖软件"
        Width="400"
        Height="500"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Label Margin="10" Content="请在下方输入名单，每行一人（建议直接粘贴表格姓名列）" />
        <TextBox
            Name="TextBoxNames"
            Margin="10,40,10,50"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Auto" />
        <Button
            Width="100"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Button_Click"
            Content="关闭" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10">
            <Button
                Width="100"
                Margin="0,0,10,0"
                Click="ButtonImport_Click"
                Content="导入Excel" />
            <Button
                Width="100"
                Click="Button_Click"
                Content="关闭" />
        </StackPanel>
    </Grid>
</Window>